<div >
  <h5>
    Edit User Account
  </h5>

  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_user" method="post">
              
      <div>
        <label for="email_box">Email</label>
          
        <input id="email_box" name="email" value="<%= @current_user.email %>">
          
      </div>
                                    
      <div>
        <label for="user_type_box">User type</label>
          
        <input id="user_type_box" name="user_type" value="<%= @current_user.user_type %>">
          
      </div>
                      
      <div>
        <label for="name_box">Name</label>
          
        <input id="name_box" name="name" value="<%= @current_user.name %>">
          
      </div>
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
