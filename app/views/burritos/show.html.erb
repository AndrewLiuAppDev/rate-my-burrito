<div>
  <div>
    <h1>
      Burrito #<%= @burrito.id %> details
    </h1>

    <div>
      <div>
        <a href="/burritos">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_burrito/<%= @burrito.id %>">
          Delete burrito
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @burrito.name %>
      </dd>

      <dt>
        Tortilla
      </dt>
      <dd>
        <%= @burrito.tortilla %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @burrito.image %>
      </dd>

      <dt>
        Restaurant
      </dt>
      <dd>
        <%= @burrito.restaurant_id %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @burrito.owner_id %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @burrito.price %>
      </dd>

      <dt>
        Ratings count
      </dt>
      <dd>
        <%= @burrito.ratings_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@burrito.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@burrito.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit burrito
    </h2>

    <form action="/modify_burrito/<%= @burrito.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="name" value="<%= @burrito.name %>">
      </div>

      <div>
        <label for="tortilla_box">
          Tortilla
        </label>

        <input type="text" id="tortilla_box" name="tortilla" value="<%= @burrito.tortilla %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="image" value="<%= @burrito.image %>">
      </div>

      <div>
        <label for="restaurant_id_box">
          Restaurant
        </label>

        <input type="text" id="restaurant_id_box" name="restaurant_id" value="<%= @burrito.restaurant_id %>">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="owner_id" value="<%= @burrito.owner_id %>">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price" value="<%= @burrito.price %>">
      </div>

      <div>
        <label for="ratings_count_box">
          Ratings count
        </label>

        <input type="text" id="ratings_count_box" name="ratings_count" value="<%= @burrito.ratings_count %>">
      </div>

      <button>
        Update burrito
      </button>
    </form>
  </div>
</div>

<hr>
